<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_height"
    android:gravity="center_vertical"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/ctm_list_word_img"
        style="@style/wrapmatch"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="@color/tan_background"
        android:src="@mipmap/ic_launcher"/>

    <LinearLayout
        android:id="@+id/ctm_list_word_lyt_gnral"
        style="@style/matchmatch"
        android:layout_toEndOf="@+id/ctm_list_word_img"
        android:layout_toRightOf="@+id/ctm_list_word_img"
        android:orientation="vertical"
        android:padding="@dimen/padding_normal">

        <TextView
            android:id="@+id/ctm_list_word_txt_miwok"
            style="@style/matchwrap"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@android:color/white"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/ctm_list_word_txt_english"
            style="@style/matchwrap"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@android:color/white"
            android:textSize="@dimen/textsize_normal"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/ctm_list_img_play"
        style="@style/wrapwrap"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:src="@drawable/ic_play_arrow_white_24dp"/>

</RelativeLayout>